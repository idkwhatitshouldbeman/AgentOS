# Buildroot Configuration for AI-OS
# Minimal x86_64 system with Python and auto-boot

# Architecture
BR2_x86_64=y
BR2_x86_corei7=y

# Linux Kernel
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_LATEST_VERSION=y
BR2_LINUX_KERNEL_USE_CUSTOM_CONFIG=n
BR2_LINUX_KERNEL_USE_DEFCONFIG=y
BR2_LINUX_KERNEL_DEFCONFIG="x86_64"

# Filesystem
BR2_TARGET_ROOTFS_EXT2=y
BR2_TARGET_ROOTFS_EXT2_4=y
BR2_TARGET_ROOTFS_ISO9660=y
BR2_TARGET_ROOTFS_ISO9660_BOOT_MENU="AI-OS Boot Menu"

# Bootloader
BR2_TARGET_SYSLINUX=y
BR2_TARGET_SYSLINUX_ISOLINUX=y
BR2_TARGET_SYSLINUX_PXELINUX=y

# Init system
BR2_INIT_BUSYBOX=y
BR2_ROOTFS_DEVICE_CREATION_DYNAMIC_DEVTMPFS=y

# System configuration
BR2_TARGET_GENERIC_HOSTNAME="ai-os"
BR2_TARGET_GENERIC_ISSUE="Welcome to AI-OS - Barebones AI Operating System"
BR2_ROOTFS_OVERLAY="$(BR2_EXTERNAL_AGENTAI_PATH)/../buildroot-config/overlay"
BR2_ROOTFS_POST_BUILD_SCRIPT=""
BR2_ROOTFS_POST_IMAGE_SCRIPT=""

# Toolchain
BR2_TOOLCHAIN_BUILDROOT_GLIBC=y

# System tools
BR2_PACKAGE_BUSYBOX_SHOW_OTHERS=y

# Python
BR2_PACKAGE_PYTHON3=y
BR2_PACKAGE_PYTHON3_PY_PYC=y
BR2_PACKAGE_PYTHON_PIP=y
BR2_PACKAGE_PYTHON_SETUPTOOLS=y

# Network
BR2_PACKAGE_DHCPCD=y

# Development tools (optional, for debugging)
BR2_PACKAGE_VIM=y
BR2_PACKAGE_NANO=y

# Compression support
BR2_PACKAGE_BZIP2=y
BR2_PACKAGE_GZIP=y
BR2_PACKAGE_XZ=y
